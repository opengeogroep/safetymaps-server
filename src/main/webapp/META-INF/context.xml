<?xml version="1.0" encoding="UTF-8"?>
<Context antiJARLocking="true" path="/dbk-api">
  <!-- Paste this in tomcat/conf/server.xml with the correct settings. Restart tomcat. This has to be done once.
    
        <Resource 
            name="jdbc/dbk-api"
            auth="Container"
            type="javax.sql.DataSource"
            username="<dbuser>"
            password="<dbpassword>"
            driverClassName="org.postgresql.Driver"
            url="jdbc:postgresql://<server>:<port>/<dbname>"
            maxActive="40"
            validationQuery="select 1"
            timeBetweenEvictionRunsMillis="30000"
            minEvictableIdleTimeMillis="5000"
        />

    -->
    
  <Parameter name="dbk.media.path" value="/opt/dbk-api-data" override="false"/>
  <ResourceLink global="jdbc/dbk-api" name="jdbc/dbk-api" type="javax.sql.Datasource"/>
</Context>
